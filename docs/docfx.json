{
  "metadata": [ { 
    "src": [ { "src": "..", "files": [ "Yaap/**.csproj" ] } ], 
    "dest": "api", 
    "disableGitFeatures": false 
  } ],
  "build": {
    "content": [ 
      { "files": [ "api/**.yml", "api/index.md" ] },
      { "files": [ "articles/**.md", "articles/**/toc.yml", "toc.yml", "*.md" ] },
      { "files": "fusion/**" }
    ],
    "resource": [ { "files": [ "images/**" ] } ],
    "overwrite": [ { "files": [ "apidoc/**.md" ], "exclude": [ "obj/**", "_site/**" ] } ],
    "sitemap":{
        "baseUrl": "https://yaap.houmus.org",
        "priority": 0.1,
        "changefreq": "monthly",
        "fileOptions":{
            "**/index.md": { "priority": 0.8 }
        }
    },
    "globalMetadata": {
      "_appTitle": "Yaap",
      "_appFooter": "Â© Copyright 2018 Dan Shechter",
      "_enableSearch": true,
      "_appLogoPath": "images/yaap-logo.svg",
      "_appFaviconPath": "images/yaap-favicon.png",
      "_gitContribute": {
        "repo": "https://github.com/org/damageboy/yaap",
        "branch": "dev",
        "apiSpecFolder": "docs-ref-overwrite"
      }
    },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [ "default", "template" ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
